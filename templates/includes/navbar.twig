<navbar class="collageify-navbar navbar">
    <div class="container-xl">
        <a href="{{ get_env('APP_URL') }}" class="navbar-brand collageify-logo">
            Collageify for
            <img src="{{ get_env('APP_URL') }}/assets/img/spotify-icon-white.png" alt="Spotify logo" />
        </a>

        {% if user is defined %}
        <div class="collageify-avatar-container">
            <ul class="navbar-right">
                <li class="user-avatar">
                    <img src="{{ user.getUserAvatarUrl() }}" alt="User's avatar image" class="rounded-circle"/>
                </li>
                <li class="user-name navbar-text">
                    {{ user.getUserName() }}
                </li>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li>
                            <form method="post" class="jsLogOutForm" action="{{ get_env('APP_URL') }}/">
                                <button type="submit" class="btn logout-button">Logout</button>
                                <input type="hidden" name="logout" value="true" />
                            </form>
                        </li>
                    </ul>
                </li>
            </ul>
        </div>
        {% endif %}
    </div>
</navbar>